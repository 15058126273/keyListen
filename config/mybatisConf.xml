<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>

        <!-- 房间 -->
        <typeAlias alias="KeyRecord" type="com.play.entity.KeyRecord"/>
        <typeAlias alias="KeyRecordDay" type="com.play.entity.KeyRecordDay"/>

    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://192.168.1.72:3306/key_record?useUnicode=true&amp;characterEncoding=utf-8" />
                <property name="username" value="yjy"/>
                <property name="password" value="yyyyyy"/>
                <property name="poolPingEnabled" value="true"/>
                <property name="poolTimeToWait" value="5000" />
                <property name="poolPingQuery" value="select 1"/>
                <property name="poolPingConnectionsNotUsedFor" value="600000"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>

        <mapper url="file:./config/mapper/KeyRecordMapper.xml"/>
        <mapper url="file:./config/mapper/KeyRecordDayMapper.xml"/>

    </mappers>
</configuration>